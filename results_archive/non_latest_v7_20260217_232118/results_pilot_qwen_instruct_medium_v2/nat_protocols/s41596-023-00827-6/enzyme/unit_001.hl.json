      },
      {
        "id": "m5",
        "name": "base medium"
      },
      {
        "id": "m6",
        "name": "MiltenyiBiotec dead cell removal kit"
      }
    ],
    "containers": [
      {
        "id": "c1",
        "type": "24-well plate"
      },
      {
        "id": "c2",
        "type": "insert"
      },
      {
        "id": "c3",
        "type": "15 ml centrifuge tube"
      }
    ],
    "equipment": [
      {
        "id": "e1",

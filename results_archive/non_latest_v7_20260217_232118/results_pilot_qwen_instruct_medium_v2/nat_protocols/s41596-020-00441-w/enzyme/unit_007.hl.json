            "kind": "sample",
            "id": "ap_spheroid_in_tube"
          }
        ],
        "params": {
          "amount": {
            "value": "supernatant",
            "unit": "unknown"
          },
          "source_container": "centrifuge_tube_1_5ml",
          "target_container": "waste"
        },
        "annotations": {
          "tool": "regular sterile filter pipette tip",
          "note": "Organoids may be visible but difficult to see; a dissecting microscope will help with visibility and handling."
        }
      },
      {
        "id": "s4",
        "op": "transfer",
        "inputs": [
          {
            "kind": "material",
            "id": "matrigel"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop"
          }
        ],
        "params": {
          "amount": {
            "value": 20,
            "unit": "µl"
          },
          "source_container": "material_container",
          "target_container": "centrifuge_tube_1_5ml"
        },
        "annotations": {
          "note": "Add 20–30 µl/well of 100% Matrigel (Phenol Red–Free) on ice"
        }
      },
      {
        "id": "s5",
        "op": "manipulate",
        "inputs": [
          {
            "kind": "sample",
            "id": "ap_spheroid_in_tube"
          },
          {
            "kind": "sample",
            "id": "matrigel_drop"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "spheroid_in_matrigel"
          }
        ],
        "params": {
          "action_kind": "resuspend",
          "tool": "mechanical pipette with wide-bore 200-µl tip"
        },
        "annotations": {
          "note": "Gently re-suspend the single A-P spheroid"
        }
      },
      {
        "id": "s6",
        "op": "transfer",
        "inputs": [
          {
            "kind": "sample",
            "id": "spheroid_in_matrigel"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_in_plate"
          }
        ],
        "params": {
          "amount": {
            "value": 1,
            "unit": "drop"
          },
          "source_container": "centrifuge_tube_1_5ml",
          "target_container": "24well_plate"
        },
        "annotations": {
          "note": "Slowly plate it on a 24-well tissue culture plate (VWR International) to make a Matrigel drop. To avoid solidification of Matrigel, this step should be performed quickly. The tissue culture plate does not need to be on ice."
        }
      },
      {
        "id": "s7",
        "op": "run_device",
        "inputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_in_plate"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_in_plate"
          }
        ],
        "params": {
          "device_kind": "incubator",
          "program": "incubate_5min_37c_5co2"
        },
        "annotations": {
          "note": "Incubate the drop in a CO2 incubator at 37 °C for 5 min."
        }
      },
      {
        "id": "s8",
        "op": "annotate",
        "inputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_in_plate"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_inverted"
          }
        ],
        "params": {
          "text": "unmapped action_kind in source: invert_plate"
        },
        "annotations": {
          "note": "Flip the plate upside down and incubate for a further 5 min to prevent the spheroid from attaching to the bottom."
        }
      },
      {
        "id": "s9",
        "op": "transfer",
        "inputs": [
          {
            "kind": "material",
            "id": "gut_growth_medium"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_in_medium"
          }
        ],
        "params": {
          "amount": {
            "value": "enough to cover the entire drop",
            "unit": "unknown"
          },
          "source_container": "medium_container",
          "target_container": "24well_plate"
        },
        "annotations": {
          "note": "Add enough gut growth medium to cover the entire drop and culture for 4 d to generate HBPOs."
        }
      },
      {
        "id": "s10",
        "op": "run_device",
        "inputs": [
          {
            "kind": "sample",
            "id": "matrigel_drop_in_medium"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "hbpo_culture"
          }
        ],
        "params": {
          "device_kind": "incubator",
          "program": "culture_4d_37c_5co2"
        },
        "annotations": {
          "note": "Cultures for spheroids should be maintained at 37 °C in an atmosphere of 5% CO2, 95% air, and the gut growth medium should be replaced every 4 d."
        }
      },

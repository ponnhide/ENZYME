          },
          "source_container": "culture_container",
          "target_container": "centrifuge_tube_1_5ml"
        },
        "annotations": {
          "tool": "mechanical pipette with wide-bore 200-µl tip"
        }
      },
      {
        "id": "s2",
        "op": "run_device",
        "inputs": [
          {
            "kind": "sample",
            "id": "ap_spheroid_in_tube"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "ap_spheroid_in_tube"
          }
        ],
        "params": {
          "device_kind": "centrifuge",
          "program": "spin_down"
        },
        "annotations": {}
      },
      {
        "id": "s3",
        "op": "transfer",
        "inputs": [
          {
            "kind": "sample",
            "id": "ap_spheroid_in_tube"
          }

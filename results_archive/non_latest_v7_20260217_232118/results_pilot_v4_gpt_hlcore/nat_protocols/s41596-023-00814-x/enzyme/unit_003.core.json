        "outputs": [],
        "params": {}
      },
      {
        "annotations": {
          "note": "Collect up to five OVB organoids on day 30 or day 60 in a sterile 1 ml tube using a cut 1,000 µl micropipette tip."
        },
        "id": "s2",
        "inputs": [],
        "op": "annotate",

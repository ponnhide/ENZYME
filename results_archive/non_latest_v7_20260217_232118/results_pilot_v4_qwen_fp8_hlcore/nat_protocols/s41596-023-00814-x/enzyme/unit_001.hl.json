        "id": "s9",
        "op": "observe",
        "inputs": [],
        "outputs": [],
        "params": {
          "modality": "visual",
          "features": [
            "photosensitive OVB organoids",
            "primitive corneal epithelial and lens-like cells",
            "retinal pigment epithelia",
            "retinal progenitor cells",
            "axon-like projections",
            "electrically active neuronal networks"
          ]
        },
        "annotations": {
          "note": "Long-term culture results in photosensitive OVB organoids with complementary cell types of optic vesicles."
        }
      },

          }
        ],
        "params": {
          "amount": {
            "unit": "µl",
            "value": 200
          }
        }
      },
      {
        "annotations": {
          "text": "Wash organoids once with 1 ml of DMEM/F12 (prewarmed in a 37 °C water bath) for 3 min and remove the DMEM/F12."
        },
        "id": "s4",
        "inputs": [
          {
            "id": "s1",
            "kind": "sample"
          }
        ],
        "op": "transfer",
        "outputs": [

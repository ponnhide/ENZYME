      {
        "id": "s3",
        "operation": "transfer",
        "params": {
          "material": "m2",
          "volume": "0.5 mL",
          "destination": "c3",
          "distribution": "per well"
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s4",
        "operation": "annotate",
        "params": {
          "text": "Lift each Transwell insert from the six‑well Transwell plate and cut the Transwell surrounding each organoid in a small square using a sharp scalpel blade."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s5",
        "operation": "annotate",
        "params": {
          "text": "Using fine‑tipped forceps, grip the edge of the Transwell square and remove it from the surrounding membrane."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s6",
        "operation": "transfer",
        "params": {
          "sample": "s_org1",
          "destination": "c3",
          "orientation": "face‑up",
          "note": "Place organoid attached to one of the small squares of Transwell membrane into a well of PBS."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s7",
        "operation": "annotate",
        "params": {
          "text": "Repeat for all remaining organoids, then circle the wells to undergo staining via immunofluorescence."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s8",
        "operation": "annotate",
        "params": {
          "text": "Tilt the 48‑well plate at an angle and aspirate the PBS from the very edge of each well using a P1000 pipette."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s9",
        "operation": "transfer",
        "params": {
          "material": "m3",
          "volume": "200 µL",
          "destination": "c3",
          "distribution": "per well"
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s10",
        "operation": "annotate",
        "params": {
          "text": "Incubate on a rocking platform at 4 °C for 3–5 h."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s11",
        "operation": "annotate",
        "params": {
          "text": "Prepare primary and secondary antibody solutions in 0.1% PBTX according to the dilutions listed in Tables 1 and 2, allowing 150 µL per well with an additional 150 µL to account for pipetting error."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s12",
        "operation": "annotate",
        "params": {
          "text": "Aspirate the blocking solution from each well."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s13",
        "operation": "transfer",
        "params": {
          "material": "m4",
          "volume": "150 µL",
          "destination": "c3",
          "distribution": "per well"
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s14",
        "operation": "annotate",
        "params": {
          "text": "Incubate the plate overnight (~16 h) on a rocking platform at 4 °C."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s15",
        "operation": "annotate",
        "params": {
          "text": "Aspirate the primary antibody and wash for a minimum of 3 h in three changes of PBS (1 mL volumes), returning to the rocking platform at 4 °C between washes."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s16",
        "operation": "transfer",
        "params": {
          "material": "m5",
          "volume": "150 µL",
          "destination": "c3",
          "distribution": "per well",
          "note": "After the final wash, aspirate PBS and add secondary antibody solution."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s17",
        "operation": "annotate",
        "params": {
          "text": "Cover the plate with layers of aluminium foil or another opaque material to prevent light exposure."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s18",
        "operation": "annotate",
        "params": {
          "text": "Incubate the plate overnight (~16 h) on a rocking platform at 4 °C (preferably in the dark)."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      },
      {
        "id": "s19",
        "operation": "annotate",
        "params": {
          "text": "Aspirate the secondary antibody and wash for a minimum of 3 h in three changes of PBS (1 mL volumes), returning to the rocking platform at 4 °C between washes and keeping the plate protected from light."
        },
        "op": "annotate",
        "inputs": [],
        "outputs": []
      }

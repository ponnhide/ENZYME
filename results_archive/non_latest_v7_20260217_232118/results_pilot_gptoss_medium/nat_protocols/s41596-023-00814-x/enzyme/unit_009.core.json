    "title": "Collect and fix OVB organoids for cryosection"
  },
  "protocol": {
    "detail_level": 0,
    "edges": [
      {
        "from": "s1",
        "to": "s2"
      },
      {
        "from": "s2",
        "to": "s3"
      },
      {
        "from": "s3",
        "to": "s4"
      },
      {
        "from": "s4",
        "to": "s5"
      }
    ],
    "start_step_id": "s1",
    "steps": [
      {
        "annotations": {
          "note": "Collect up to five OVB organoids (day 30 or day 60) in a sterile 1 ml tube using a cut 1,000 µl micropipette tip."
        },
        "id": "s1",
        "inputs": [],
        "op": "allocate",
        "outputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "params": {}
      },
      {
        "annotations": {
          "note": "Remove any carried-over medium carefully with a 200 µl micropipette tip without disturbing the organoids."
        },
        "id": "s2",
        "inputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "op": "annotate",
        "outputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "params": {}
      },
      {
        "annotations": {
          "note": "Wash organoids once with 1 ml of DMEM/F12 (prewarmed in a 37 °C water bath) for 3 min and remove the DMEM/F12."
        },
        "id": "s3",
        "inputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "op": "annotate",
        "outputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "params": {}
      },
      {
        "annotations": {
          "note": "Add 1 ml PFA (prewarmed in a 37 °C water bath) and incubate the tube at room temperature for 30–60 min."
        },
        "id": "s4",
        "inputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "op": "annotate",
        "outputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "params": {}
      },
      {
        "annotations": {
          "critical": "Do not exceed the time of PFA fixation above 1 h since this will lead to high autofluorescence."
        },
        "id": "s5",
        "inputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "op": "annotate",
        "outputs": [
          {
            "id": "organoid_sample",
            "kind": "sample"
          }
        ],
        "params": {}
      }
    ]
  },

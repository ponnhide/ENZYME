  "protocol": {
    "steps": [
      {
        "id": "s1",
        "op": "transfer",
        "inputs": [
          {
            "kind": "sample",
            "id": "organoid_5mo"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "organoid_in_dish"
          }
        ],
        "params": {
          "amount": {
            "value": 1,
            "unit": "organism"
          }
        },
        "annotations": {}
      },
      {
        "id": "s2",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Prepare the vibratome by wiping the vibratome chamber with Kimwipes and coating the post with a thin layer of superglue."
        }
      },
      {
        "id": "s3",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Mount the organoid on the glue‑coated post using a plastic spatula. Dip the spatula into PBS containing 0.5% BSA before use. Allow the organoid to attach firmly to the post."
        }
      },
      {
        "id": "s4",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Fill the vibratome chamber with ice‑cold, oxygenated cutting ACSF. Connect tubing to the vibratome chamber to bubble cutting ACSF with carbogen during slicing."
        }
      },
      {
        "id": "s5",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Slice 350‑µm‑thick sections using the vibratome set to 100 Hz frequency, 1.2 mm amplitude and a very slow forward movement velocity."
        }
      },
      {
        "id": "s6",
        "op": "transfer",
        "inputs": [
          {
            "kind": "sample",
            "id": "slice"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "slice_beaker"
          }
        ],
        "params": {
          "amount": {
            "value": 1,
            "unit": "slice"
          }
        },
        "annotations": {}
      },
      {
        "id": "s7",
        "op": "run_device",
        "inputs": [
          {
            "kind": "sample",
            "id": "slice_beaker"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "slice_beaker"
          }
        ],
        "params": {
          "device_kind": "incubator",
          "program": "incubate",
          "temperature": {
            "value": 35,
            "unit": "C"
          },
          "duration": {
            "value": 30,
            "unit": "min"
          }
        },
        "annotations": {}
      },
      {
        "id": "s8",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "After incubation, keep the beaker with slices at room temperature for the duration of the experiment."
        }
      },
      {
        "id": "s9",
        "op": "transfer",
        "inputs": [
          {
            "kind": "sample",
            "id": "slice_beaker"
          }
        ],
        "outputs": [
          {
            "kind": "sample",
            "id": "slice_recording"
          }
        ],
        "params": {
          "amount": {
            "value": 1,
            "unit": "slice"
          }
        },
        "annotations": {}
      },
      {
        "id": "s10",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Place a harp slice grid over the slice and start perfusion with oxygenated ACSF at a flow rate of ~3 mL/min."
        }
      },
      {
        "id": "s11",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Prepare a patch pipette from a thin‑walled borosilicate glass tube with an access resistance of 5–8 MΩ, measured when the pipette is filled with intracellular solution and immersed in ACSF."
        }
      },
      {
        "id": "s12",
        "op": "observe",
        "inputs": [
          {
            "kind": "sample",
            "id": "slice_recording"
          }
        ],
        "outputs": [],
        "params": {
          "modality": "microscope",
          "features": [
            "lamination"
          ]
        },
        "annotations": {}
      },
      {
        "id": "s13",
        "op": "observe",
        "inputs": [
          {
            "kind": "sample",
            "id": "slice_recording"
          }
        ],
        "outputs": [],
        "params": {
          "modality": "microscope",
          "features": [
            "healthy neuron"
          ]
        },
        "annotations": {}
      },
      {
        "id": "s14",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Apply a light positive pressure before inserting the pipette into the ACSF; locate the pipette tip on the monitor screen and move toward the slice surface while adjusting focus."
        }
      },
      {
        "id": "s15",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Slowly approach the selected neuron diagonally at a very slow speed until a pressure‑induced dimple is visible on the cell surface."
        }
      },
      {
        "id": "s16",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Release the positive pressure and apply light negative pressure using suction to facilitate seal formation."
        }
      },
      {
        "id": "s17",
        "op": "annotate",
        "inputs": [],
        "outputs": [],
        "params": {},
        "annotations": {
          "note": "Change the pipette potential step‑wise (ΔV = −10 mV) to negative values (−50 to −70 mV) to facilitate Giga seal formation."
        }
      },
      {
        "id": "s18",
        "op": "observe",
        "inputs": [
          {
            "kind": "sample",
            "id": "patch_pipette"
          }
        ],
        "outputs": [
          {
            "kind": "data",
            "id": "recording_data"
          }
        ],
        "params": {
          "modality": "instrument_readout",
          "features": [
            "capacitance transient"
          ]
        },
        "annotations": {}
      },
      {
        "id": "s19",
        "op": "observe",
        "inputs": [
          {
            "kind": "sample",
            "id": "patch_pipette"
          }
        ],
        "outputs": [

{
  "schema_version": "0.4",
  "ir_kind": "core",
  "metadata": {
    "title": "Colony genotyping PCR (abstract, non-operational)",
    "source": {
      "type": "paper_pdf",
      "id": "colony_genotyping_pcr_abstract.txt"
    }
  },
  "resources": {
    "materials": [
      {
        "id": "colony_plate"
      },
      {
        "id": "pcr_reaction_mix"
      },
      {
        "id": "primer_set"
      }
    ],
    "containers": [
      {
        "id": "sample_container",
        "type": "tube"
      },
      {
        "id": "pcr_tube",
        "type": "tube"
      }
    ],
    "equipment": [
      {
        "id": "thermocycler",
        "type": "thermocycler"
      },
      {
        "id": "amplicon_reader",
        "type": "amplicon_readout_system"
      }
    ],
    "samples": [
      {
        "id": "selected_colony"
      },
      {
        "id": "template_extract_sample"
      },
      {
        "id": "pcr_reaction_sample"
      }
    ],
    "data": [
      {
        "id": "signal_pattern"
      },
      {
        "id": "genotype_call"
      }
    ]
  },
  "protocol": {
    "steps": [
      {
        "id": "s1",
        "op": "allocate",
        "params": {
          "allocate_kind": "container"
        },
        "outputs": {
          "container": "sample_container"
        }
      },
      {
        "id": "s2",
        "op": "allocate",
        "params": {
          "allocate_kind": "sample"
        },
        "outputs": {
          "sample": "selected_colony"
        }
      },
      {
        "id": "s3",
        "op": "transfer",
        "params": {
          "source": "colony_plate",
          "destination": "sample_container"
        }
      },
      {
        "id": "s4",
        "op": "manipulate",
        "params": {
          "action_kind": "resuspend",
          "inputs": [
            "sample_container"
          ]
        },
        "outputs": {
          "sample": "template_extract_sample"
        }
      },
      {
        "id": "s5",
        "op": "allocate",
        "params": {
          "allocate_kind": "material"
        },
        "outputs": {
          "material": "pcr_reaction_mix"
        }
      },
      {
        "id": "s6",
        "op": "allocate",
        "params": {
          "allocate_kind": "material"
        },
        "outputs": {
          "material": "primer_set"
        }
      },
      {
        "id": "s7",
        "op": "allocate",
        "params": {
          "allocate_kind": "container"
        },
        "outputs": {
          "container": "pcr_tube"
        }
      },
      {
        "id": "s8",
        "op": "manipulate",
        "params": {
          "action_kind": "mix",
          "inputs": [
            "pcr_reaction_mix",
            "primer_set",
            "template_extract_sample",
            "pcr_tube"
          ]
        },
        "outputs": {
          "sample": "pcr_reaction_sample"
        }
      },
      {
        "id": "s9",
        "op": "run_device",
        "params": {
          "device_kind": "thermocycler",
          "device_ref": "thermocycler",
          "program": {
            "profile_name": "genotype_assay"
          },
          "inputs": [
            "pcr_reaction_sample"
          ]
        }
      },
      {
        "id": "s10",
        "op": "observe",
        "params": {
          "device_kind": "amplicon_readout_system",
          "device_ref": "amplicon_reader",
          "program": {
            "program_name": "detection_method"
          },
          "modality": "instrument_readout",
          "features": [
            "signal_pattern"
          ]
        },
        "outputs": {
          "data": "signal_pattern"
        }
      },
      {
        "id": "s11",
        "op": "annotate",
        "params": {
          "note": "Compare observed signal patterns against expected assay signatures."
        }
      },
      {
        "id": "s12",
        "op": "annotate",
        "params": {
          "note": "Record the genotype call and mark uncertain outcomes for confirmatory follow-up."
        },
        "outputs": {
          "data": "genotype_call"
        }
      }
    ],
    "start_step_id": "s1",
    "edges": [
